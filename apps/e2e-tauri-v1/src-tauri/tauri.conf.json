{
  "build": {
    "beforeDevCommand": "pnpm vite dev",
    "beforeBuildCommand": "pnpm vite build",
    "distDir": "../dist"
  },
  "package": {
    "productName": "zubridge-tauri-v1-example",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      },
      "process": {
        "exit": true
      },
      "fs": {
        "all": false
      },
      "path": {
        "all": false
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$APPDATA/**", "$RESOURCE/**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.zubridge.tauri.v1.example",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    },
    "security": {
      "csp": "default-src 'self' asset: https://asset.localhost; connect-src 'self' ipc://localhost ipc:* plugin:*; img-src 'self' asset: https://asset.localhost data:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "Zubridge Tauri v1 Example (Main)",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "secondary",
        "title": "Zubridge Tauri v1 Example (Secondary)",
        "width": 700,
        "height": 500,
        "x": 100,
        "y": 100,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
