{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "e2e-tauri",
  "version": "0.1.0",
  "identifier": "com.zubridge.e2e-tauri",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm vite dev",
    "beforeBuildCommand": "pnpm vite build"
  },
  "app": {
    "security": {
      "csp": {
        "default-src": ["'self'"],
        "connect-src": ["'self'", "ipc:*", "plugin:*", "tauri:*"],
        "img-src": ["'self'", "asset:", "https://asset.localhost", "data:"],
        "script-src": ["'self'", "'unsafe-inline'"],
        "style-src": ["'self'", "'unsafe-inline'"]
      },
      "capabilities": ["main-capability"]
    },
    "windows": [
      {
        "label": "main",
        "title": "Zubridge E2E Tauri (Main)",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "secondary",
        "title": "Zubridge E2E Tauri (Secondary)",
        "width": 700,
        "height": 500,
        "x": 100,
        "y": 100,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
