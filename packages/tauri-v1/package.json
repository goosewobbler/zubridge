{
  "name": "@zubridge/tauri-v1",
  "version": "1.0.0",
  "description": "A streamlined state management library for Tauri v1 applications using Zustand.",
  "author": "Sam Maister <goosewobbler@protonmail.com>",
  "homepage": "https://github.com/goosewobbler/zubridge-electron",
  "license": "MIT",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "pnpm clean:output && pnpm dlx shx rm -rf ./node_modules pnpm-lock.yaml",
    "clean:output": "pnpm dlx shx rm -rf ./dist",
    "prebuild": "pnpm clean:output",
    "build": "tsx ./scripts/build.ts",
    "release": "pnpm pack && pnpm publish",
    "test:unit": "cargo test && vitest run",
    "test:dev": "vitest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goosewobbler/zubridge-electron.git"
  },
  "keywords": [
    "zustand",
    "tauri",
    "desktop-apps",
    "state-management"
  ],
  "exports": {
    ".": [
      {
        "import": {
          "types": "./dist/index.d.ts",
          "default": "./dist/index.js"
        },
        "require": {
          "types": "./dist/index.d.cts",
          "default": "./dist/index.cjs"
        }
      },
      "./dist/index.cjs"
    ],
    "./main": [
      {
        "import": {
          "types": "./dist/main.d.ts",
          "default": "./dist/main.js"
        },
        "require": {
          "types": "./dist/main.d.cts",
          "default": "./dist/main.cjs"
        }
      },
      "./dist/main.cjs"
    ]
  },
  "peerDependencies": {
    "@tauri-apps/api": ">=1.6.0",
    "zustand": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "tauri": {
      "optional": false
    },
    "zustand": {
      "optional": false
    }
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.6.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/shelljs": "^0.8.15",
    "@vitest/coverage-v8": "^3.0.5",
    "react": "^19.0.0",
    "rollup": "^4.34.6",
    "shelljs": "^0.9.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "files": [
    "dist/*",
    "docs/*",
    "main/*",
    "preload/*",
    "src-rust/**/*",
    "Cargo.toml",
    "Cargo.lock",
    "tauri.conf.json",
    "README.md"
  ],
  "dependencies": {
    "@tauri-apps/api": "^1.6.0",
    "zustand": "^5.0.3"
  }
}
