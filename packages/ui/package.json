{
  "name": "@zubridge/ui",
  "version": "0.1.1-next.1",
  "description": "UI components for zubridge applications",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/styles.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./electron": {
      "types": "./dist/electron.d.ts",
      "import": "./dist/electron.js",
      "require": "./dist/electron.cjs"
    },
    "./tauri": {
      "types": "./dist/tauri.d.ts",
      "import": "./dist/tauri.js",
      "require": "./dist/tauri.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./vite-plugin": {
      "types": "./scripts/vite-ui-watcher-plugin.ts",
      "import": "./dist/scripts/vite-ui-watcher-plugin.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**",
    "scripts/**/*.ts"
  ],
  "scripts": {
    "build:plugin": "tsc scripts/vite-ui-watcher-plugin.ts --outDir dist/scripts --module ESNext --moduleResolution bundler --target ESNext --esModuleInterop",
    "build:css": "pnpx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./dist/styles.css --postcss",
    "build:lib": "tsup",
    "build": "pnpm run build:lib && pnpm run build:plugin && pnpm run build:css",
    "clean": "shx rm -rf .turbo node_modules dist",
    "dev:css": "pnpm run build:css -- --watch",
    "dev:lib": "tsup --watch",
    "dev": "mkdir -p dist && pnpm run dev:lib && pnpm run dev:css",
    "package": "pnpm pack"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.12",
    "@tauri-apps/api": "^2.8.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@zubridge/electron": "workspace:*",
    "@zubridge/types": "workspace:*",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.5.5",
    "react": "^19.1.0",
    "tailwindcss": "^4.1.12",
    "tsup": "^8.4.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "@zubridge/core": "workspace:*",
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@zubridge/electron": "workspace:*",
    "@zubridge/tauri": "workspace:*",
    "react": "^19.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
