{
  "name": "zubridge-monorepo",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/goosewobbler/zubridge",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build:packages",
    "ci": "turbo run test:unit test:e2e:reducers test:e2e:handlers test:e2e:basic",
    "ci-linux": "turbo run test:unit test:e2e:reducers test:e2e:handlers test:e2e:basic --concurrency=1",
    "ci:e2e:logs": "cat ./e2e/wdio-logs-electron-example-basic/*.log && cat ./e2e/wdio-logs-electron-example-handlers/*.log && cat ./e2e/wdio-logs-electron-example-reducers/*.log",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "graph:e2e": "tsx ./scripts/create-task-graph.ts ./e2e-graph.png test:unit test:e2e:reducers test:e2e:handlers test:e2e:basic",
    "prepare": "husky",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:basic": "turbo run test:e2e:basic",
    "test:e2e:handlers": "turbo run test:e2e:handlers",
    "test:e2e:reducers": "turbo run test:e2e:reducers",
    "clean": "turbo run clean && pnpm clean:cache && pnpm dlx shx rm -rf ./node_modules pnpm-lock.yaml",
    "clean:cache": "turbo run clean:cache && pnpm dlx shx rm -rf .turbo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goosewobbler/zubridge.git"
  },
  "keywords": [
    "zustand",
    "tauri",
    "electron",
    "cross-platform",
    "desktop-apps",
    "state-management"
  ],
  "devDependencies": {
    "@types/shelljs": "^0.8.15",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "package-versioner": "^0.2.0",
    "prettier": "^3.5.0",
    "shelljs": "^0.9.2",
    "shx": "^0.4.0",
    "tsx": "^4.19.2",
    "turbo": "^2.4.1"
  },
  "lint-staged": {
    "**/*.{yml,json,md,ts,tsx,js}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "edgedriver",
      "esbuild",
      "geckodriver"
    ],
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
