{
  "name": "zubridge-monorepo",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/goosewobbler/zubridge",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build:packages",
    "build:electron-basic": "turbo run build:basic --filter=zubridge-electron-example --force",
    "build:electron-handlers": "turbo run build:handlers --filter=zubridge-electron-example --force",
    "build:electron-reducers": "turbo run build:reducers --filter=zubridge-electron-example --force",
    "build:electron-redux": "turbo run build:redux --filter=zubridge-electron-example --force",
    "build:electron-custom": "turbo run build:custom --filter=zubridge-electron-example --force",
    "build:tauri-basic": "turbo run build --filter=zubridge-tauri-example --force",
    "build:tauri-v1-basic": "turbo run build --filter=zubridge-tauri-v1-example --force",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "graph:e2e": "tsx ./scripts/create-task-graph.ts ./e2e-graph.png test:unit test:e2e:reducers test:e2e:handlers test:e2e:basic test:e2e:redux test:e2e:custom",
    "logs:e2e": "cat ./e2e/wdio-logs-electron-basic/*.log || cat ./e2e/wdio-logs-electron-handlers/*.log || cat ./e2e/wdio-logs-electron-reducers/*.log || cat ./e2e/wdio-logs-electron-redux/*.log || cat ./e2e/wdio-logs-electron-custom/*.log",
    "prepare": "husky",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:electron-basic": "cross-env DEBUG=zubridge:* turbo run test:e2e:electron-basic",
    "test:e2e:electron-handlers": "cross-env DEBUG=zubridge:* turbo run test:e2e:electron-handlers",
    "test:e2e:electron-reducers": "cross-env DEBUG=zubridge:* turbo run test:e2e:electron-reducers",
    "test:e2e:electron-redux": "cross-env DEBUG=zubridge:* turbo run test:e2e:electron-redux",
    "test:e2e:electron-custom": "cross-env DEBUG=zubridge:* turbo run test:e2e:electron-custom",
    "test:e2e:tauri-basic": "cross-env DEBUG=zubridge:* turbo run test:e2e:tauri-basic",
    "test:e2e:tauri-v1-basic": "cross-env DEBUG=zubridge:* turbo run test:e2e:tauri-v1-basic",
    "clean": "turbo run clean && pnpm clean:cache && pnpm dlx shx rm -rf ./node_modules pnpm-lock.yaml",
    "clean:cache": "turbo run clean:cache && pnpm dlx shx rm -rf .turbo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goosewobbler/zubridge.git"
  },
  "keywords": [
    "zustand",
    "tauri",
    "electron",
    "cross-platform",
    "desktop-apps",
    "state-management"
  ],
  "devDependencies": {
    "@types/shelljs": "^0.8.15",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "package-versioner": "^0.7.0",
    "prettier": "^3.5.0",
    "shelljs": "^0.10.0",
    "shx": "^0.4.0",
    "tsx": "^4.19.2",
    "turbo": "^2.4.1"
  },
  "lint-staged": {
    "**/*.{yml,json,md,ts,tsx,js}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.8.1+sha512.c50088ba998c67b8ca8c99df8a5e02fd2ae2e2b29aaf238feaa9e124248d3f48f9fb6db2424949ff901cffbb5e0f0cc1ad6aedb602cd29450751d11c35023677",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "edgedriver",
      "geckodriver"
    ],
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
