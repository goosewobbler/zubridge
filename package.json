{
  "name": "zubridge-monorepo",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/goosewobbler/zubridge",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build:packages",
    "ci": "turbo run test:unit test:e2e:reducers test:e2e:handlers test:e2e:basic",
    "ci-linux": "turbo run test:unit test:e2e:reducers test:e2e:handlers test:e2e:basic --concurrency=1",
    "ci:e2e:logs": "turbo run logs",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "graph:e2e": "tsx ./scripts/create-task-graph.ts ./e2e-graph.png test:unit test:e2e:reducers test:e2e:handlers test:e2e:basic",
    "prepare": "husky",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:basic": "turbo run test:e2e:basic",
    "test:e2e:handlers": "turbo run test:e2e:handlers",
    "test:e2e:reducers": "turbo run test:e2e:reducers",
    "clean": "turbo run clean && pnpm dlx shx rm -rf ./node_modules pnpm-lock.yaml",
    "clean:cache": "turbo run clean:cache && pnpm dlx shx rm -rf .turbo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goosewobbler/zubridge.git"
  },
  "keywords": [
    "zustand",
    "tauri",
    "electron",
    "cross-platform",
    "desktop-apps",
    "state-management"
  ],
  "devDependencies": {
    "@turbo-version/version": "^0.8.3",
    "@types/shelljs": "^0.8.15",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "shelljs": "^0.9.2",
    "shx": "^0.4.0",
    "tsx": "^4.19.2",
    "turbo": "^2.4.1"
  },
  "lint-staged": {
    "**/*.{yml,json,md,ts,tsx,js}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.3.0+sha512.ee592eda8815a8a293c206bb0917c4bb0ff274c50def7cbc17be05ec641fc2d1b02490ce660061356bd0d126a4d7eb2ec8830e6959fb8a447571c631d5a2442d",
  "pnpm": {
    "ignoredBuiltDependencies": [
      "edgedriver",
      "esbuild",
      "geckodriver"
    ],
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}
